generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Lead {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  firstName String
  phone     String
  email     String
  doorIssue String
  location  String?
  
  // New fields for second step
  comments        String?
  imageUrls       String[]  // Array of image URLs
  secondStepAt    DateTime? // Timestamp for when images/comments were added
  
  // UTM Parameters
  utmSource    String?
  utmMedium    String?
  utmCampaign  String?
  
  // Additional tracking
  userAgent    String?
  ipAddress    String?
}
